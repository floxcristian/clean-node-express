{
  "name": "node_clean",
  "version": "1.0.0",
  "description": "A boilerplate app.",
  "main": "index.js",
  "scripts": {
    "start": "nodemon index.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "db:setup": "node dbSetup.babel.js",
    "format:write": "prettier **/*.{js,json,md} --write",
    "format:test": "prettier **/*.{js,json,md} --list-different",
    "snyk:protect": "snyk protect",
    "typings": "typings install",
    "prepublish": "npm run snyk-protect",
    "prepare": "npm run snyk-protect",
    "dependencies:check": "npx npm-check --skip-unused --update"
  },
  "husky": {
    "hooks": {
      "pre-commit": ""
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "git add"
    ],
    "*.{html|js|json|md}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "api",
    "node",
    "express",
    "boilerplate",
    "es6",
    "rest"
  ],
  "author": "Cristian Flores <cristianflores.ee@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.11",
    "pg": "^8.3.3",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "eslint": "^7.8.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.4",
    "prettier": "2.1.1"
  }
}
